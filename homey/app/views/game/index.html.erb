<div class="container">
  <% if session[:game_session] %>
    <div class="text-3xl font-bold text-center">Session Credits: <span id="credits"><%= session[:credits] %></span></div>
    <div id="winning-message" class="hidden p-4 rounded-md bg-green-50">
      <div class="flex" >
        <div class="flex-shrink-0">
          <svg class="w-5 h-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 id="winning-message-text" class="text-sm font-medium text-green-800"></h3>
        </div>
      </div>
    </div>

    <div id="slot-machine" class="flex justify-center mt-10">
      <div class="w-1/3">
        <div class="flex justify-center space-x-4 slots-wrapper">
          <div id="slot1" class="w-20 h-20 p-4 text-6xl font-bold text-center border-2 border-black rounded slot"></div>
          <div id="slot2" class="w-20 h-20 p-4 text-6xl font-bold text-center border-2 border-black rounded slot"></div>
          <div id="slot3" class="w-20 h-20 p-4 text-6xl font-bold text-center border-2 border-black rounded slot"></div>
        </div>
        <div class="mt-4 text-center">
          <button id="roll" class="px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700">Roll</button>
        </div>
      </div>
    </div>
  <% else %>
    <div class="w-1/6 mx-auto ">
      <%= link_to "New Game Session", "/session/new", class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
